<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light mode gradient -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gradient_start_light"
                android:endColor="@color/gradient_end_light"
                android:angle="45" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Dark mode gradient (used in night mode) -->
    <item android:state_enabled="true" android:state_window_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gradient_start_dark"
                android:endColor="@color/gradient_end_dark"
                android:angle="45" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#4D4D4D" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>